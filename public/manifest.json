{
  "manifest_version": 3,

  "name": "Revoke.cash",
  "description": "The Revoke.cash extension warns you when you are about to approve any allowances",
  "version": "0.1.0",

  "options_ui": {
    "page": "options.html"
  },

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },

  "action": {
    "default_icon": "icon-48.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["js/replace_window_ethereum.js", "js/vendor.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
