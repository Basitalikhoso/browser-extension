{
  "manifest_version": 3,

  "name": "Revoke.cash Pro",
  "description": "The Revoke.cash Pro extension warns you when you are about to approve any allowances",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["js/replace_window_ethereum.js", "js/vendor.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
